<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".HomeFragment">
    <!-- Cabeçalho -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="60dp"></LinearLayout>

        <!-- Barra de Pesquisa
        Caso fizermos de outra forma deixei comentado
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Pesquisar"
            android:drawableStart="@drawable/ic_search"
            android:padding="8dp"
            android:background="@drawable/search_bar_background"
            android:textColor="#000"/>

         Ícones de Navegação
        <ImageView
            android:id="@+id/notifications_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:contentDescription="Notificações"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:contentDescription="Perfil"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

     Conteúdo Principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header">

        <!-- Categorias -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botões de categoria -->
                <Button
                    android:id="@+id/categoria_videosalta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Em alta"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/categoria_treinos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Treinos"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/categoria_recomendacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/red"
                    android:text="Recomendações"/>

                <Button
                android:id="@+id/category_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                android:text="Dieta"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Lista de Vídeos -->
        <GridLayout
            android:id="@+id/video_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_marginTop="8dp">

            <!-- Exemplo de item de vídeo -->
            <!-- Adicione programaticamente mais itens de vídeo no Java -->
        </GridLayout>

    </LinearLayout>

</RelativeLayout>