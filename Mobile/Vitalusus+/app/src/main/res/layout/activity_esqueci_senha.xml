<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EsqueciSenhaActivity">

    <TextView
        android:id="@+id/title_esqueceu_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Esqueci Senha"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/containerComponents"
        style="@style/ContainerComponents"
        android:layout_height="570dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_esqueceu_senha" />

    <EditText
        android:id="@+id/editEsqueciSenhaEmail"
        style="@style/Edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Informe o seu E-Mail"
        android:inputType="text|textEmailAddress"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toTopOf="@id/containerComponents" />

    <!--TextView pergunta secreta ES = Esqueceu Senha-->
    <TextView
        android:id="@+id/txtESpSeguranca"
        style="@style/TextForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="txtperguntaSeg"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/btnVerificarEmail" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerificarEmail"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar E-Mail"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/editEsqueciSenhaEmail" />

    <!--Edit Text resposta secreta ES = Esqueceu Senha-->
    <EditText
        android:id="@+id/editESrSeguranca"
        style="@style/Edit_text"
        android:hint="Resposta da Pergunta Secreta"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@id/txtESpSeguranca" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerificarResposta"
        style="@style/Button"
        android:layout_marginTop="24dp"
        android:text="Verificar Resposta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editESrSeguranca" />

    <!--BotÃ£o Entrar-->
    <EditText
        android:id="@+id/editESNovaSenha"
        style="@style/Edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_eye"
        android:hint="Nova Senha"
        android:inputType="text|textPassword"
        app:layout_constraintEnd_toEndOf="@id/containerComponents"
        app:layout_constraintStart_toStartOf="@id/containerComponents"
        app:layout_constraintTop_toBottomOf="@+id/btnVerificarResposta" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRedefinirSenha"
        style="@style/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Redefinir Senha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editESNovaSenha" />

    <Button
        android:id="@+id/btnESOlharSenha"
        android:layout_width="35dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVerificarResposta" />
    
</androidx.constraintlayout.widget.ConstraintLayout>