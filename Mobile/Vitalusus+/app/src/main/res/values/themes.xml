<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Vitalusus" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.Vitalusus" parent="Base.Theme.Vitalusus" />

    <style name="Theme.Vitalusus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.AppCompat.NavTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.Vitalusus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vitalusus.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonStyle" parent="Theme.Material3.Dark.NoActionBar">
        <!-- cor do radio quando marcado -->
        <item name="colorAccent">@android:color/white</item>
        <!-- cor padrÃ£o -->
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


    <!-- Tema base para o modo escuro -->
    <style name="Base.Theme.Vitalusus.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton.Dark</item>
    </style>

    <!-- Tema base para o modo claro -->
    <style name="Base.Theme.Vitalusus.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:radioButtonStyle">@style/CustomRadioButton.Light</item>
    </style>

    <!-- Estilo personalizado para RadioButton no modo escuro -->
    <style name="CustomRadioButton.Dark" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/white</item> <!-- Cor da bolinha -->
    </style>

    <!-- Estilo personalizado para RadioButton no modo claro -->
    <style name="CustomRadioButton.Light" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonTint">@android:color/black</item> <!-- Cor da bolinha -->
    </style>


</resources>

