    <style name="ThemeOverlay.AppCompat.NavTheme">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="Theme.Vitalusus.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

